@model TaskAuthenticationAuthorization.Models.Auth.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Registration";
    Layout = "_Layout";
}

<h2>Registration</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Authentication" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Enter E-Mail</label>
                    <input type="text" asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Enter Password</label>
                    <input type="text" asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmedPassword" class="control-label">Confirm Password</label>
                    <input type="text" asp-for="ConfirmedPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.FirstName" class="control-label">Enter Your FName</label>
                    <input type="text" asp-for="Customer.FirstName" class="form-control"/>
                    <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.LastName" class="control-label">Enter Your LName</label>
                    <input type="text" asp-for="Customer.LastName" class="form-control"/>
                    <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.Address" class="control-label">Enter Your Address</label>
                    <input type="text" asp-for="Customer.Address" class="form-control"/>
                    <span asp-validation-for="Customer.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-outline-dark"/>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}