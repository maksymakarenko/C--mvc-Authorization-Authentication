@model TaskAuthenticationAuthorization.Models.Auth.ViewModels.LogInViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<a asp-action="Register" asp-controller="Authentication">Registration</a>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Authentication" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Enter E-Mail</label>
                    <input type="text" asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Enter Password</label>
                    <input type="text" asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-outline-dark"/>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}